<div class="container list-unstyled p-3 mb-2 bg-light text-dark">
  <h1>All Restaurants</h1>
  <ol>
    <% @restaurants.each do |restaurant| %>
      <li>
        <%= link_to restaurant.name, restaurant_path(restaurant) %>
        <div>
        <%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      </li>
    <% end %>
  </ol>
  <button type="button" class="btn btn-outline-primary"><%= link_to "Add a new restaurant", new_restaurant_path %></button>
  </div>
</div>

